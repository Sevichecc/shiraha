{
  "name": "shiraha",
  "version": "0.0.1",
  "type": "module",
  "author": "Ëóç+85CD",
  "license": "WTFPL",
  "keywords": [
    "classless",
    "css",
    "theme",
    "web-design",
    "reset",
    "style"
  ],
  "description": "A beautiful classless CSS theme/framework with Sugar.",
  "repository": {
    "type": "git",
    "url": "https://github.com/importantimport/shiraha.git",
    "directory": "packages/shiraha"
  },
  "homepage": "https://github.com/importantimport/shiraha",
  "bugs": "https://github.com/importantimport/shiraha/issues",
  "main": "dist/shiraha.css",
  "style": "dist/shiraha.css",
  "exports": {
    "./package.json": "./package.json",
    ".": "./dist/shiraha.css",
    "./base": "./dist/shiraha.base.css",
    "./dist/*": "./dist/*/*.css",
    "./src/*": "./src/*/*.sss"
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "dev": "postcss src/*.sss --base src --dir dist --ext css --watch",
    "build": "postcss src/*.sss --base src --dir dist --ext css",
    "lint": "stylelint \"src/**/*.sss\"",
    "format": "stylelint \"src/**/*.sss\" --fix --allow-empty-input"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "open-props": "^1.4.16",
    "postcss": "^8.4.18",
    "postcss-cli": "^10.0.0",
    "postcss-combine-duplicated-selectors": "^10.0.3",
    "postcss-combine-media-query": "^1.0.1",
    "postcss-easy-import": "^4.0.0",
    "postcss-jit-props": "^1.0.7",
    "postcss-lightningcss": "^0.6.0",
    "postcss-mixins": "^9.0.4",
    "sugarss": "^4.0.1"
  }
}