// Button Mixin

@import './states.sss'

@define-mixin base-button

  @mixin states-before

  position: relative

  display: inline-block

  min-width: 2.5rem
  height: 2.5rem
  margin: 0.25rem
  padding: 0.5rem

  color: inherit
  text-decoration: none

  background: transparent
  border-radius: 9999px

  &::before
    background: var(--md-sys-color-on-surface-variant)
