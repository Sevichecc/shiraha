footer
  margin-top: 2rem
  padding: 2rem 0

  /* with divider, m3.material.io style */
  & > hr:first-child
    margin-bottom: 2rem

  /* without divider, relay.material.io style */
  &:not(:has(hr:first-child))
    padding: 2rem

    color: var(--md-sys-color-on-surface-variant)

    background-color: var(--md-sys-color-surface-variant)
    border-radius: 2rem

    & > hr
      margin: 2rem -2rem

      border-color: var(--md-sys-color-surface)
