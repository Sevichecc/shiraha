@import '../lib/mixin-line-numbers.sss'

:where(code, kbd, samp, pre)
  font-family: var(--shiraha-font-mono, var(--font-mono))
  font-size: 0.875rem
  white-space: pre-wrap

:where(code, samp, kbd)
  font-weight: var(--font-weight-6)

:where(code, pre)
  color: var(--md-sys-color-on-surface-variant)

  background-color: var(--md-sys-color-surface-variant)
  border-radius: var(--size-1)

:where(code)
  display: inline-block

  padding: var(--size-1) var(--size-2)

  vertical-align: middle

:where(pre)
  padding: calc(var(--size-1) + var(--size-2))

  & > :where(code)
    overflow-x: auto
    display: grid

    padding: 0

    font-weight: var(--font-weight-4)

/* rehype-pretty-code*/

@mixin line-numbers code[data-line-numbers]

@media (--OSdark)
  pre[data-theme='light'],
  code[data-theme='light']
    display: none

@media (--OSlight)
  pre[data-theme='dark'],
  code[data-theme='dark']
    display: none

:is([data-theme='dark'], .dark)
  & pre[data-theme='light'],
  & code[data-theme='light']
    display: none

:is([data-theme='light'], .light)
  & pre[data-theme='dark'],
  & code[data-theme='dark']
    display: none
