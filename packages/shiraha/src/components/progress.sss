:where(progress)
  height: 0.25rem

  background: var(--md-sys-color-surface-container-highest)

  appearance: none

  &::-moz-progress-bar
    background: var(--md-sys-color-primary)

  &::-webkit-progress-bar
    background: var(--md-sys-color-surface-container-highest)

  &::-webkit-progress-value
    background: var(--md-sys-color-primary)
