blockquote
  quotes: '\201C''\201D''\2018''\2019'

  margin: var(--size-5) 0
  padding-left: var(--size-3)

  font-weight: var(--font-weight-5)
  font-style: italic

  border-left-color: var(--shiraha-color-outline-variant)
  border-left-width: var(--size-1)

  & p:first-of-type::before
    content: open-quote

  & p:last-of-type::after
    content: close-quote
