blockquote
  quotes: '\201C''\201D''\2018''\2019'

  margin: 1.5rem 0
  padding-left: 1rem

  font-weight: 500
  font-style: italic

  border-left-color: var(--md-sys-color-outline-variant)
  border-left-width: 0.25rem

  & p:first-of-type::before
    content: open-quote

  & p:last-of-type::after
    content: close-quote
