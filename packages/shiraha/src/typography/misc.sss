abbr:where([title])
  text-decoration: underline dotted

:where(b, strong)
  font-weight: 700

:where(mark)
  color: var(--md-sys-color-on-tertiary-container)

  background-color: var(--md-sys-color-tertiary-container)

:where(small)
  font-size: 80%

:where(sub, sup)
  position: relative

  font-size: 75%
  line-height: 0
  vertical-align: baseline

:where(sub)
  bottom: -0.25rem

:where(sup)
  top: -0.25rem
