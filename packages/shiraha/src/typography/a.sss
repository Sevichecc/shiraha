:where(p, li, blockquote) > a
  color: var(--md-sys-color-primary)
  text-decoration: none

  background: linear-gradient(0deg, var(--md-sys-color-on-primary-container), var(--md-sys-color-on-primary-container)) no-repeat right bottom / 0 2px

  transition: background-size 400ms var(--md-sys-motion-easing-emphasized-decelerate)

  &:where(:hover, :focus-visible)
    color: var(--md-sys-color-on-primary-container)

    background-position-x: left
    background-size: 100% 2px
